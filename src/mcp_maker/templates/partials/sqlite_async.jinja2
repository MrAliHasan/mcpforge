        if not conditions:
            return []
        where_clause = " OR ".join(conditions)
        cursor = await db.execute(
            f'SELECT * FROM "{{ table.name }}" WHERE {where_clause} LIMIT ?',
            (*params, limit),
        )
        return [dict(row) for row in await cursor.fetchall()]
